  "dependencies": {
    "@auth/core": "^0.34.2",
    "@auth/express": "^0.5.6",
    "@aws-sdk/client-s3": "^3.614.0",
    "@aws-sdk/s3-request-presigner": "^3.614.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
